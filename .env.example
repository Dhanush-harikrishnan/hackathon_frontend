# SafeRoute Frontend Environment Variables
# Copy this file to .env and fill in your values

# Backend API URL (includes /api path)
# For local development: http://localhost:3001/api
# For production: https://your-backend-url.com/api
VITE_API_URL=

# Socket.io URL (root server URL without /api)
# For local development: http://localhost:3001
# For production: https://your-backend-url.com
VITE_SOCKET_URL=

# Map Configuration
VITE_DEFAULT_LAT=13.0827
VITE_DEFAULT_LNG=80.2707
VITE_DEFAULT_ZOOM=13

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_GEOLOCATION=true
